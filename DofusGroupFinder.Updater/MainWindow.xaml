<Window x:Class="Zaapix.Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mise à jour Zaapix" Height="200" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock x:Name="StatusLabel" Text="Mise à jour en cours..." 
                       FontSize="16" Margin="0,0,0,10" TextAlignment="Center"/>
            <ProgressBar x:Name="ProgressBar" Height="20" Minimum="0" Maximum="100" Margin="0,0,0,10" Foreground="#4bd1cc"/>
            <Button x:Name="CloseButton" Content="Fermer" Width="80" Height="30" 
                    IsEnabled="False" Click="CloseButton_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
