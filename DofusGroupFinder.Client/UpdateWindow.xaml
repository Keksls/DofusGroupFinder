<Window x:Class="DofusGroupFinder.Client.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:namespace="clr-namespace:DofusGroupFinder.Client"
        Title="Mise à jour disponible"
        Background="{DynamicResource BackgroundColor}"
        Foreground="{DynamicResource ForegroundColor}"
        Height="150" Width="400" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock x:Name="MessageText" Text="Téléchargement de la mise à jour..." 
                   FontSize="14" Margin="0 0 0 10" TextAlignment="Center"/>
        <ProgressBar x:Name="Progress"
             Height="20"
             Minimum="0"
             Maximum="100"
             Foreground="{DynamicResource AccentColor}"
             Background="{DynamicResource InputBackgroundColor}"
             BorderBrush="{DynamicResource BorderColor}"
             BorderThickness="1"
                     Value="50"
             Margin="0,10,0,0"/>
    </StackPanel>
</Window>