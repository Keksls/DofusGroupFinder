<Window x:Class="DofusGroupFinder.Client.CharactersManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Characters" Height="424" Width="420"
        Background="{DynamicResource BackgroundColor}"
        Foreground="{DynamicResource ForegroundColor}"
        WindowStyle="None" ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}" />
        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}" />
        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}" />
    </Window.Resources>

    <Grid>
        <!-- Titlebar -->
        <Grid DockPanel.Dock="Top" Background="{DynamicResource BorderColor}" Height="24" VerticalAlignment="Top"
      MouseDown="TitleBar_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icône à gauche -->
            <Image Source="/Icons/chars.png" Width="24" Height="24" Margin="4,0,0,0" VerticalAlignment="Center" Grid.Column="0"/>

            <TextBlock Text="Gestion des Personnages" VerticalAlignment="Center" Margin="16,0" FontWeight="Bold" Grid.Column="1"/>

            <Button Content="X" Width="24" Height="24" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,4,0" Padding="0"
            Click="CloseButton_Click" BorderThickness="1" Foreground="{DynamicResource ForegroundColor}" Grid.Column="2"/>
        </Grid>

        <Grid Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Liste des personnages -->
            <ListBox x:Name="CharactersListBox" Grid.Column="0" Margin="10" SelectionChanged="CharactersListBox_SelectionChanged"
                     DisplayMemberPath="Name" />

            <!-- Formulaire -->
            <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top">
                <TextBlock Text="Name:"/>
                <TextBox x:Name="NameTextBox" Height="24" Margin="0,0,0,10"/>

                <TextBlock Text="Class:"/>
                <ComboBox x:Name="ClassComboBox" Height="24" Margin="0,0,0,10"/>

                <TextBlock Text="Level:"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="-" Width="30" Height="24" Click="DecreaseLevel_Click"/>
                    <TextBox x:Name="LevelTextBox" Height="24" Width="50" Text="1" TextAlignment="Center" Margin="5,0"/>
                    <Button Content="+" Width="30" Height="24" Click="IncreaseLevel_Click"/>
                </StackPanel>

                <TextBlock Text="Server:"/>
                <ComboBox x:Name="ServerComboBox" Height="24" Margin="0,0,0,10"/>

                <TextBlock Text="Roles:"/>
                <ComboBox x:Name="RolesComboBox" Height="24" Margin="0,0,0,10"/>

                <TextBlock Text="Comment:"/>
                <TextBox x:Name="CommentTextBox" Margin="0,0,0,20" Height="52" AcceptsReturn="True" TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="CreateButton" Content="Create" Width="100" Height="24" Click="CreateButton_Click"/>
                    <Button x:Name="UpdateButton" Content="Update" Width="100" Height="24" Click="UpdateButton_Click" Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>