<UserControl x:Class="DofusGroupFinder.Client.Controls.GroupCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource InputBackgroundColor}"
             Margin="0,0,8,8"
             Padding="0"
             Height="Auto" Width="Auto">
    <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="8" Padding="8">

        <StackPanel Margin="0">

            <!-- Header -->
            <TextBlock x:Name="DungeonNameText" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>

            <!-- Owner -->
            <TextBlock x:Name="OwnerText" FontSize="12" Foreground="{DynamicResource ForegroundColor}" Margin="0,0,0,5"/>

            <!-- Infos -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">

                <TextBlock x:Name="RemainingSlotsText" Margin="0,0,10,0"/>
                <TextBlock x:Name="SuccessWantedText" />
            </StackPanel>

            <!-- Characters -->
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Players: " FontWeight="Bold" />
                <TextBlock x:Name="CharacterNamesText" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Date -->
            <TextBlock x:Name="CreatedAtText" FontSize="10" HorizontalAlignment="Right" Foreground="Gray"/>

        </StackPanel>

    </Border>
</UserControl>