<UserControl x:Class="DofusGroupFinder.Client.Controls.CreateListingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:DofusGroupFinder.Client.Controls"
             Background="{DynamicResource BackgroundColor}"
             Width="320">

    <Grid Margin="8,8,8,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Donjon -->
        <TextBlock Text="Donjon" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundColor}" />
        <controls:FilteredComboBox x:Name="DungeonComboBox" PropertyChanged="DungeonComboBox_PropertyChanged" Grid.Row="0" VerticalAlignment="Center" Margin="64,0,0,0" Height="24" Width="Auto"/>

        <Grid  Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Success -->
            <TextBlock Text="Succès" Grid.Column="1" Margin="4,0,0,5" Foreground="{DynamicResource ForegroundColor}" />
            <StackPanel Orientation="Horizontal" Grid.Column="1" x:Name="SuccessContainer" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,16,0,-10">
            </StackPanel>

            <!-- Slots restants -->
            <TextBlock Text="Places" Grid.Column="0" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundColor}" />
            <ComboBox x:Name="SlotsComboBox" Grid.Column="0" Height="24" Margin="0,20,0,5" Width="72" HorizontalAlignment="Left" />
        </Grid>

        <!-- Sélection des personnages -->
        <TextBlock Text="Personnages" Grid.Row="3" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundColor}" />
        <ListBox x:Name="CharactersListBox"
         Grid.Row="3"
         Margin="0,20,0,8"
         SelectionMode="Multiple"
         MinHeight="64"
         MaxHeight="174"
         ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <!-- Disposition en grille avec WrapPanel -->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <!-- Template des items -->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <controls:SquaredCharacterListItemControl 
                Loaded="CharacterListItemControl_Loaded"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Bouton submit -->
        <Button Content="Créer l'annonce" Grid.Row="4" Width="164" Height="28" HorizontalAlignment="Center" Click="CreateListing_Click"/>
    </Grid>
</UserControl>
