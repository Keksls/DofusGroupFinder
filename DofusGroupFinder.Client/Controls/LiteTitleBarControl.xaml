<UserControl x:Class="DofusGroupFinder.Client.Controls.LiteTitleBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DofusGroupFinder.Client.Controls"
             Height="32" MinWidth="320" Background="{DynamicResource BorderColor}">
    <StackPanel Orientation="Vertical">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Zone de status -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,10,0" Grid.Column="0">
                <Ellipse x:Name="StatusEllipse" Width="15" Height="15" Fill="Red" Margin="0,0,10,0"/>
                <TextBlock x:Name="ListingsCountText" Text="0 Annonce" VerticalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
            </StackPanel>

            <!-- Titre centré -->
            <TextBlock Text="Dofus Group Finder" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource ForegroundColor}"/>

            <!-- Close Button -->
            <Button Content="X" Width="24" Grid.Column="2" Height="24" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,2,5,0"
            BorderThickness="1"
            Click="CloseButton_Click"/>
        </Grid>
    </StackPanel>
</UserControl>
