<UserControl x:Class="DofusGroupFinder.Client.Controls.GroupFooter.GroupSlotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="64" Height="64">

    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Background="White" Padding="0">
        <Grid>
            <!-- Version remplie -->
            <Grid x:Name="FilledPanel" Visibility="Visible" Width="64" Height="64">
                <!-- Image du personnage -->
                <Image x:Name="ClassIconImage" Width="64" Height="64" Stretch="UniformToFill" />

                <!-- Overlay texte niveau -->
                <Border Background="#AA333333"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            CornerRadius="0,8,0,0"
            Width="42"
            Height="16"
            Margin="0,0,0,0">
                    <TextBlock x:Name="LevelText" 
                   Text="Lvl 200" 
                   Foreground="White"
                   FontWeight="Bold"
                   FontSize="10"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" />
                </Border>
            </Grid>

            <!-- Version vide -->
            <Button x:Name="EmptyButton" Visibility="Collapsed" Background="Transparent" BorderThickness="0">
                <TextBlock Text="+" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
        </Grid>
    </Border>

</UserControl>
