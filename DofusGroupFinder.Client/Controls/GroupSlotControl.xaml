<UserControl x:Class="DofusGroupFinder.Client.Controls.GroupSlotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:namespace="DofusGroupFinder.Client.Controls"
             Width="64" Height="64">

    <Border BorderBrush="Transparent" BorderThickness="0" CornerRadius="5" Background="White" Padding="0">
        <Grid>
            <!-- Version remplie -->
            <Grid x:Name="FilledPanel" Visibility="Visible">
                <Grid>
                    <Border Name="ReceiverColor"
            BorderBrush="{DynamicResource BorderColor}"
            BorderThickness="0"
            Margin="0"
            CornerRadius="6">
                        <Grid>
                            <Border Name="Mask"
            Background="{DynamicResource BackgroundColor}"
            BorderBrush="{DynamicResource BorderColor}"
            BorderThickness="1"
            Margin="0"
            CornerRadius="3">
                            </Border>
                            <StackPanel>
                                <Image Name="ClassIconImage" Source="/Icons/chars.png" Stretch="UniformToFill" />
                                <StackPanel.OpacityMask>
                                    <VisualBrush Visual="{Binding ElementName=Mask}" />
                                </StackPanel.OpacityMask>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Overlay texte niveau -->
                <Border Background="#AA333333"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            CornerRadius="0,8,0,0"
            Width="42"
            Height="16"
            Margin="0,0,0,0">
                    <TextBlock x:Name="LevelText" 
                   Text="Lvl 200" 
                   Foreground="White"
                   FontWeight="Bold"
                   FontSize="10"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" />
                </Border>
            </Grid>

            <!-- Version vide -->
            <Button x:Name="EmptyButton" Visibility="Collapsed" Background="Transparent" BorderThickness="0">
                <TextBlock Text="+" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
        </Grid>
    </Border>

</UserControl>
