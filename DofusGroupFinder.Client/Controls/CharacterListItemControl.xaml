<UserControl x:Class="DofusGroupFinder.Client.Controls.CharacterListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:namespace="clr-namespace:DofusGroupFinder.Client.Controls"
             Width="Auto" Margin="0" Padding="0" Cursor="Hand"
             xmlns:controls="clr-namespace:DofusGroupFinder.Client.Controls"
             >

    <Border x:Name="MainBorder"
            Height="48" 
            Background="{DynamicResource InputBackgroundColor}"
            BorderBrush="{DynamicResource BorderColor}"
            BorderThickness="1"
            CornerRadius="6"
            Margin="0">
        <Grid Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="44"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icone de classe -->
            <controls:GroupSlotControl x:Name="ClassIcon" Grid.Column="0" Width="44" Height="44" Margin="0" />

            <!-- Nom -->
            <TextBlock x:Name="CharacterNameText" 
                       Grid.Column="1"
                       VerticalAlignment="Top"
                       FontWeight="Bold"
                       Margin="4"
                       FontSize="14"
                       Text="NomDuPerso" />

            <!-- Niveau -->
            <TextBlock x:Name="ServerText"
                       Grid.Column="1"
                       VerticalAlignment="Bottom"
                       FontSize="12"
                       Foreground="Gray"
                       FontStyle="Italic"
                       Text="Kourial"
                       Margin="4"/>

            <!-- Niveau -->
            <TextBlock x:Name="LevelText"
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       FontSize="12"
                       Foreground="Gray"
                       Text="Lvl 200"
                       Margin="8,0,4,0"/>
        </Grid>
    </Border>

    <UserControl.Resources>
        <Style TargetType="Border">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HighlightColor}" />
                    <Setter Property="BorderBrush" Value="{DynamicResource AccentColor}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
</UserControl>