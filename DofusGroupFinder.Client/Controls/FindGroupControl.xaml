<UserControl x:Class="DofusGroupFinder.Client.Controls.FindGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:DofusGroupFinder.Client.Controls"
             Background="{DynamicResource BackgroundColor}">

    <DockPanel Margin="10">
        <StackPanel Orientation="Vertical">
            <!-- Top: les filtres -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0">
                <TextBlock Text="DJ " VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource ForegroundColor}" />
                <controls:FilteredComboBox x:Name="DungeonComboBox" Width="200" Height="24" Margin="0,0,8,0"/>
                <controls:IconToggleButton x:Name="OnlyWithSlotsCheckBox" Icon="/Icons/succes.png" VerticalAlignment="Center" Grid.Row="0" Height="32" Width="32" Margin="0,10,0,10"  HorizontalAlignment="Right" />
            </StackPanel>            
            <Button Content="Search" Margin="0,0,0,0" Width="128" Height="24" Click="Search_Click" HorizontalAlignment="Center"/>

            <!-- Main: résultats -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" MinHeight="64">
                <StackPanel x:Name="ResultsPanel"/>
            </ScrollViewer>
        </StackPanel>
    </DockPanel>
</UserControl>
