<UserControl x:Class="DofusGroupFinder.Client.Controls.FindGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:DofusGroupFinder.Client.Controls"
             Background="{DynamicResource BackgroundColor}"
             Width="320"
             Height="322">

    <DockPanel Margin="0">

        <!-- Top: les filtres -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" VerticalAlignment="Top" Margin="8,8,8,8">
            <TextBlock Text="Donjon " VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource ForegroundColor}" />
            <controls:FilteredComboBox x:Name="DungeonComboBox" Width="240" Height="24" Margin="0,0,8,0" PropertyChanged="DungeonComboBox_PropertyChanged"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" x:Name="SuccessContainer" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,8">
        </StackPanel>

        <controls:NoGroupFooterControl x:Name="NoGroupFooter" 
                                       HorizontalAlignment="Stretch" 
                                       VerticalAlignment="Bottom" 
                                       DockPanel.Dock="Bottom"  
                                       Visibility="Visible"
                                       Background="{DynamicResource HighlightColor}"/>

        <controls:InGroupFooterControl x:Name="InGroupFooter" 
                                       HorizontalAlignment="Stretch" 
                                       VerticalAlignment="Bottom" 
                                       DockPanel.Dock="Bottom"  
                                       Visibility="Collapsed"
                                       Background="{DynamicResource HighlightColor}"/>

        <!-- Main: résultats -->
        <Border Background="{DynamicResource InputBackgroundColor}" 
                BorderBrush="{DynamicResource BorderColor}" 
                BorderThickness="0" 
                CornerRadius="0" 
                Padding="0,8" 
                DockPanel.Dock="Bottom">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Background="{DynamicResource InputBackgroundColor}"
                          Padding="0"
                          Margin="0,0,6,0" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="ResultsPanel">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>