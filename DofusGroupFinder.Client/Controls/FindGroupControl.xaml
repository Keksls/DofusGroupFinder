<UserControl x:Class="DofusGroupFinder.Client.Controls.FindGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:DofusGroupFinder.Client.Controls"
             Background="{DynamicResource BackgroundColor}">

    <DockPanel Margin="10">
        <!-- Top: les filtres -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">

            <TextBlock Text="Dungeon:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{DynamicResource ForegroundColor}" />
            <ComboBox x:Name="DungeonComboBox" Width="200" Margin="0,0,20,0"/>

            <CheckBox x:Name="OnlyWithSlotsCheckBox" Content="Only with slots" VerticalAlignment="Center" />

            <Button Content="Search" Margin="20,0,0,0" Width="80" Click="Search_Click"/>
        </StackPanel>

        <!-- Main: résultats -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ResultsPanel"/>
        </ScrollViewer>
    </DockPanel>
</UserControl>
