<UserControl x:Class="DofusGroupFinder.Client.Controls.NoGroupFooterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="42" Background="LightGray">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10,0,10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="ListingsComboBox" Grid.Column="0" DisplayMemberPath="DungeonName" Margin="0,0,10,0"/>
        <Button Content="Créer un groupe" Width="128" Grid.Column="1" Click="CreateGroup_Click"/>
    </Grid>

</UserControl>
